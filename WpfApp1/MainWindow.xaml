<Window x:Class="WpfGameOfLife.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfGameOfLife"
        mc:Ignorable="d"
        Title="Game Of Life" Height="1100" Width="1000" Top="5">
    <DockPanel Height="Auto">
        <Label Name="Generation" Content="0" FontWeight="Bold" DockPanel.Dock="Top" HorizontalAlignment="Left"/>
        <Button DockPanel.Dock="Top" FontWeight="Bold" Height="35"  Width="900" Click="Reset_Click">Reset</Button>
        <Button DockPanel.Dock="Top" Margin="0,2" FontWeight="Bold" Height="35"  Width="900" Click="Play_Click">Play</Button>
        <Canvas DockPanel.Dock="Top" Margin="0,2" HorizontalAlignment="Center" VerticalAlignment="Top" Name="grid" Width="900" Height="900" />         
    </DockPanel>
</Window>
